{
  "manifest_version": 2,
  "name": "Hatchling Alerts",
  "version": "0.1.0",

  "description": "Shows the age of a Twitter account above a tweet",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "page": "background.html"
  },

  "content_scripts": [
    {
      "js": ["browser-polyfill@0.9.0/browser-polyfill.min.js", "content.js"],
      "matches": ["https://*.twitter.com/*"]
    }
  ],

  "permissions": ["https://*.twitter.com/*", "cookies", "notifications"],

  "browser_specific_settings": {
    "gecko": {
      "id": "@hatchlings-alert"
    }
  }
}
